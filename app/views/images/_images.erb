
<div id="album" class="album">

<%= render(:partial => "/images/image", :collection => images) %>
</div>
<%= sortable_element  ('album',
                     :url => {:action => 'update_image_order'},
                      :opacity=>"0.7", :revert=>"true", 
                      :scroll=>"true", :tag=> "div",
                      :constraint=>'false',
                      :overlap=>'false',
                      :loading=> "Element.show('loader_progress')",
                      :complete=>"Element.hide('loader_progress')") %>
