
<div class="myaccountblock" Align="Left">
  <div align="center">
    <!-- START:flash -->
    <% if notice -%>
      <div id="notice"><%= notice  %></div>
    <% end -%>
    <!-- END:flash -->

    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  </div>

  <div class="myaccountheader">Edit Product</div>
  <div class="myaccountsection">
    <div class="myaccountheading">Information for product</div>
    <div class="myaccountcontent">

      <%= render 'form' %>

    </div>
    </p>
  </div>


  <div class="myaccountsection">
    <div class="myaccountheading">Inventory</div>
    <div class="myaccountcontent">
      <div id="product-inventory">
        <div>
          <%=image_tag "interface/ajax-loader2.gif", :id=>"loader_progress" ,:style=>"display:none"%> <%= link_to ('New Inventory',{ :action=>:create_empty_record, :controller=>:product_details, :typeofrecord=>"detail", :product_id=>@product.id, :request_type=>"nothing"}, :id=>"new-product-detail-item", :remote => true  )%>
        </div>

        <div id="product-detail-list">
          <%=render :partial=>"detail_list"%>
        </div>
      </div>
    </div>
  </div>

  <div class="myaccountsection">
    <div class="myaccountheading">Images</div>
    <div class="myaccountcontent">
      <div id="product-images">
      <%= render :partial=>"image_section" %>
      </div>
    </div>
  </div>


  <%= link_to 'Show', @product %> |
  <%= link_to 'Back', products_path %>


