    <%= image_tag(image.image_url(:large).to_s) %>
  </div>
  <div class="imageName">
    <%@image=image%>
    Color: <%=ajax_select2("title","image",@image, @colors)%>

    <%#=editablefieldcreate("title", image)%>
  </div>
   <div class="imageDelete">
   <%= link_to image_tag("interface/Button-Delete.png"), {:id=>image, :incoming_id=>params[:id], :action=>"delete_image", :format=>"js"}, :class=>"delete_image", :confirm => 'Are you sure?', :remote=>true %> 
  </div>
</div>
