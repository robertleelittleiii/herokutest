
<div class="myaccountblock" Align="Left">
  <div align="center">
    <!-- START:flash -->
    <% if notice -%>
      <div id="notice"><%= notice  %></div>
    <% end -%>
    <!-- END:flash -->
  </div>

  <div class="hidden-item">
    <div id="page-id"><%=@page.id%></div>
  </div>
  
  <div class="myaccountheader">Edit Page</div>
  <div class="myaccountsection">
    <div class="myaccountheading">Information</div>
    <div class="myaccountcontent">


      <p>
        <b>Title:</b><br>
        <%=editablefieldcreate("title", @page)%>
      </p>

      <p>
        <b>Full Screen:</b><br>

        <%=editablecheckboxedit("full_screen", @page, "Full Screen")%>
      </p>
      </br>
<%#*<p>%>
<%#*<b>Active In Menu</b><br>%>
<%#=editablecheckboxedit("in_menu",@page,"Yes")%>
<%#*</p>%>

<%#*<p>%>
<%#*<b>Active In Menu</b><br>%>
<%#=ajax_select("menu_local","page",@page, @menu_location)%>
<%#*</p>%>

    </div>
  </div>
  
  <div class="myaccountsection">
    <div class="myaccountheading">Slider</div>
    <div class="myaccountcontent">
       <p>
        <b>Uses Slider on page:</b><br>
        <%=editablecheckboxedit("has_slider", @page, "Has Slider")%>
      </p>
             <p>
        <b>Slider Width:</b><br>
        <%=editablefieldcreate("slider_width", @page)%>
      </p>       
      
      <p>
        <b>Slider Height:</b><br>
        <%=editablefieldcreate("slider_height", @page)%>
      </p>
      </br>
      </br>
      <%= link_to("Add Slider", {:controller=>:sliders, :action=>:create_empty_record, :page_id=>@page.id}, :remote=>true, :class=>"button-link", :id=>"add-slider")  %>
      </br>
      </br>
      <div id="sliders">
        <ul id="sliders">
        <%=render :partial=>"slider_list.html", :collection=>@page.sliders%>
        </ul>
      </div>
      </br>
    </div>
  </div>
  
  <div class="myaccountsection">

    <div class="myaccountheading myaccountheadingmce">Body</div>
    <div class="myaccountcontent">

      <% form_for(@page, :remote=>true) do |f| %>
  <%#= f.submit "Update"%><br>

        <center>
          <%= f.text_area :body, :class => "mceEditor"%>
        </center>
        <br>
      <% end %>
    </div>
  </div>

  <p><%= link_to 'Back', request.env['HTTP_REFERER'] %></p>
</div>